# PostgreSQL Connection (must match infrastructure/.env)
POSTGRES_USER=jobagent
POSTGRES_PASSWORD=jobagent
POSTGRES_DB=jobs

# RabbitMQ Connection (must match infrastructure/.env)
RABBITMQ_USER=jobagent
RABBITMQ_PASSWORD=jobagent
RABBITMQ_VHOST=/

# Telegram Bot Configuration
JOB_AGENT_BOT_TOKEN=your_bot_token_from_botfather
# Restrict bot access to specific user IDs (comma-separated).
# If not set or empty, all users can access the bot.
# To find your user ID, message @userinfobot on Telegram.
# Example: TELEGRAM_ALLOWED_USER_IDS=123456789,987654321
TELEGRAM_ALLOWED_USER_IDS=

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# LangChain Tracing (Optional)
LANGSMITH_TRACING_V2=false
LANGSMITH_PROJECT=telegram-bot
LANGSMITH_API_KEY=

OLLAMA_BASE_URL=