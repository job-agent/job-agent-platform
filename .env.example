# PostgreSQL Connection (must match infrastructure/.env)
POSTGRES_USER=jobagent
POSTGRES_PASSWORD=jobagent
POSTGRES_DB=jobs

# RabbitMQ Connection (must match infrastructure/.env)
RABBITMQ_USER=jobagent
RABBITMQ_PASSWORD=jobagent
RABBITMQ_VHOST=/

# Telegram Bot Configuration
JOB_AGENT_BOT_TOKEN=your_bot_token_from_botfather
# Restrict bot access to specific user IDs (comma-separated).
# If not set or empty, all users can access the bot.
# To find your user ID, message @userinfobot on Telegram.
# Example: TELEGRAM_ALLOWED_USER_IDS=123456789,987654321
TELEGRAM_ALLOWED_USER_IDS=

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key

# LangChain Tracing (Optional)
LANGSMITH_TRACING_V2=false
LANGSMITH_PROJECT=telegram-bot
LANGSMITH_API_KEY=

OLLAMA_BASE_URL=

# OpenTelemetry Configuration (Optional)
# Used by: shared/telemetry package (TelemetryConfig.from_env)
# Initialized in: packages/telegram_bot/src/telegram_bot/main.py
# DO NOT DELETE: These variables configure distributed tracing and metrics
#
# Enable/disable telemetry (default: true)
OTEL_ENABLED=true
# Service version for resource identification
OTEL_SERVICE_VERSION=0.1.0
# Deployment environment (development, staging, production)
OTEL_DEPLOYMENT_ENVIRONMENT=development
# Enable console exporter for traces/metrics (default: true)
OTEL_EXPORTER_CONSOLE_ENABLED=true
# Enable OTLP exporter to send traces to collector (default: false)
OTEL_EXPORTER_OTLP_ENABLED=false
# OTLP collector endpoint (default: http://otel-collector:4317)
OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4317
# Sampling strategy: always_on, always_off, traceidratio, parentbased_always_on, parentbased_traceidratio
OTEL_TRACES_SAMPLER=parentbased_always_on
# Sampling ratio for traceidratio samplers (0.0 to 1.0, default: 1.0 = 100%)
OTEL_TRACES_SAMPLER_ARG=1.0
# Metrics export interval in milliseconds (default: 60000 = 1 minute)
OTEL_METRICS_EXPORT_INTERVAL=60000